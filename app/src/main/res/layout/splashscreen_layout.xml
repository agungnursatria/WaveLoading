<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/background_dark"
    tools:context="anb.waveloading.SplashScreen">

    <me.itangqi.waveloadingview.WaveLoadingView
        android:layout_centerInParent="true"
        android:id="@+id/waveLoadingView"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:wlv_borderColor="@color/colorAccent"
        app:wlv_borderWidth="1dp"
        app:wlv_shapeType="circle"
        app:wlv_round_rectangle="true"
        app:wlv_triangle_direction="north"


        app:wlv_titleCenterStrokeColor="@android:color/holo_blue_dark"
        app:wlv_titleCenterStrokeWidth="1dp"
        app:wlv_titleCenterColor="@android:color/white"
        app:wlv_titleCenterSize="12sp"

        app:wlv_titleTopStrokeColor="@android:color/holo_blue_dark"
        app:wlv_titleTopStrokeWidth="1dp"
        app:wlv_titleTopColor="@android:color/white"
        app:wlv_titleTopSize="12sp"

        app:wlv_titleBottomStrokeColor="@android:color/holo_blue_dark"
        app:wlv_titleBottomStrokeWidth="1dp"
        app:wlv_titleBottomColor="@android:color/white"
        app:wlv_titleBottomSize="12sp"

        app:wlv_waveAmplitude="70"
        app:wlv_waveColor="@color/colorAccent"
        />

    <TextView
        android:layout_below="@+id/waveLoadingView"
        android:textColor="@color/colorAccent"
        android:layout_centerHorizontal="true"
        android:fontFamily="cursive"
        android:id="@+id/agungnursatria"
        android:textSize="18sp"
        android:layout_marginTop="5dp"
        android:text="@string/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"/>

    <TextView
        android:layout_below="@+id/agungnursatria"
        android:id="@+id/welcome"
        android:textColor="@color/colorAccent"
        android:layout_centerHorizontal="true"
        android:fontFamily="cursive"
        android:textSize="36sp"
        android:layout_marginTop="5dp"
        android:text="@string/welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"/>

</RelativeLayout>
